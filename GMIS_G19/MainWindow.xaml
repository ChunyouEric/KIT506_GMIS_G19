<Window x:Class="GMIS_G19.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GMIS_G19"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" FontSize="36">
    <Grid>
        <StackPanel HorizontalAlignment="Center" Width="800">
            <TextBlock Text="GROUP MANGEMENT INFORMATION SYSTEM" TextWrapping="Wrap" FontSize="48" HorizontalAlignment="Center" Height="132" Margin="20,20,20,20"/>
            <Label Content="Please choose a category" FontSize="18" HorizontalContentAlignment="Center" Height="38"/>
            <ComboBox Width="120" SelectionChanged="ComboBox_SelectionChanged" FontSize="18" Text="Please choose your category">
                <ComboBox Width="120"/>
                <ComboBoxItem Content="Master" IsSelected="True"/>
                <ComboBoxItem Content="Bachelor"/>
            </ComboBox>
            <Button Content="&gt;" FontSize="16" Width="33" Height="33" Click="Button_Click" Margin="630,100,0,0"/>
        </StackPanel>
    </Grid>

</Window>

