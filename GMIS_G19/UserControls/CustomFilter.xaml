<UserControl x:Class="GMIS_G19.UserControls.CustomFilter"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:GMIS_G19.UserControls"
             mc:Ignorable="d" Loaded="OnUserControlLoaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Label Grid.Column="0" x:Name="LblFilter" />
        <ComboBox x:Name="CbFilter" SelectionChanged="OnComboFilterSelectionChanged" Grid.Column="1" />
        <TextBox x:Name="TxbFilter" TextChanged="OnTextBoxFilterTextChanged" Grid.Column="2" />
    </Grid>
</UserControl>